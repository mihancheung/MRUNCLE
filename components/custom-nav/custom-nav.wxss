.custom_nav {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 32px;
  padding: 0 0 0 7px;
  z-index: 3000;
  margin: 5px 0 0;
}

.btns_box {
  position: relative;
  height: 30px;
  width: 87px;
  border: 0.5px solid rgba(255, 255, 255, .15);
  background: rgba(0, 0, 0, .15);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20px;
}

.line {
  height: 18px;
  width: 0.5px;
  background: rgba(255, 255, 255, .35);
  overflow: hidden;
}

.icon_box {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 43px;
}

.back_icon, .home_icon {
  width: 17px;
  height: 17px;
}