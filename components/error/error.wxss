.gb_error {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  width: 100vw;
  background: #fff;
  z-index: 1000;
  box-sizing: border-box;
}

.gb_error_icon {
  width: 220rpx;
  height: 220rpx;
  margin: 0!important;
  background: none!important;
}

.gb_error_title {
  color: #232323;
  margin: 60rpx 0 0;
  font-size: 40rpx;
  font-weight: 300;
}

.gb_error_desc {
  color: #85878C;
  margin: 20rpx 0 0;
  font-size: 32rpx;
  font-weight: 300;
}

.gb_error_btn {
  margin: 100rpx 0 0;
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,.2);
}

.gb_error_btn_hover {
  opacity: 0.8;
}

.gb_error_btn_icon {
  width: 100%;
  height: 100%;
  margin: 0!important;
  background: none!important;
}