page {
  background: #f7f7f7;
}

.home_banner {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 350rpx;
  background: #202020;
  padding-bottom: 5rpx;
}

.home_avata {
  width: 100%;
  height: 250rpx;
  margin-bottom: 0;
}

.home_title {
  color: #ffffff;
  font-size: 40rpx;
}

.home_post {
  position: relative;
  min-height: calc(100vh - 350rpx);
  padding: 80rpx 0;
  box-sizing: border-box;
}
.home_post_item {
  margin: 80rpx 40rpx 0;
  font-size: 24rpx;
  color: #999999;
}

.home_post_item:nth-child(1) {
  margin-top: 0;
}

.home_post_image {
  width: 100%;
  height: 340rpx;
  border-radius: 30rpx;
  box-shadow: 0 0 40rpx rgba(0, 0, 0, .1);
}

.home_post_info {
  position: relative;
  z-index: 1;
  margin: 30rpx 0 0;
}
.home_post_title {
  display: block;
  margin-bottom: 15rpx;
  font-size: 34rpx;
  color: #202020;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.home_post_author {
  display: block;
  margin-bottom: 15rpx;
  font-weight: 300;
}
.home_post_tags {
  display: block;
  font-weight: 300;
}
.home_post_tags_item {
  display: inline-block;
  margin: 0 15rpx 0 0;
}
.home_post_tags_item:nth-last-child(1) {
  margin-right: 0;
}

.home_post .gb_error {
  padding: 0;
  height: calc(100vh - 350rpx);
}

.home_post .gb_error_icon {
  width: 250rpx;
  height: 250rpx;
}

.home_post .gb_error_title {
  font-size: 38rpx;
}

.home_post .gb_error_desc {
  font-size: 28rpx;
}

.home_post_pageloading {
  position: relative;
  min-height: 200rpx;
}
.home_post_pageloading .tpl_loading {
  background: none;
}

.home_post_pageloading .gb_error {
  position: relative;
  background: none;
  height: auto;
  padding: 80rpx 0 0;
}

.home_post_pageloading .gb_error_icon {
  display: none;
}

.home_post_pageloading .gb_error_btn {
  width: 80rpx;
  height: 80rpx;
  margin-top: 40rpx;
}

.home_post_pageloading .gb_error_title {
  font-size: 30rpx;
  margin-top: 0;
}

.home_post_pageloading .gb_error_desc {
  font-size: 24rpx;
}
