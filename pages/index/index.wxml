<import src="/tpls/loading/loading.wxml" />

<wxs module="modPostList">
  var formatPostList = function (postList) {
    var nextPostList = []
    for (var i = 0; i < postList.length; i++) {
      nextPostList = nextPostList.concat(postList[i]);
    }
    return nextPostList;
  };

  module.exports = {
    formatPostList: formatPostList
  }
</wxs>

