page {
  box-sizing: border-box;
  background: #ffffff;
  padding-bottom: calc(104rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(104rpx + env(safe-area-inset-bottom));
}

page:after {
  content: '';
  position: fixed;
  left: 0;
  top: 0;
  height: 1rpx;
  width: 100vw;
  border-top: 0.5px solid #e4e4e4;
  overflow: hidden;
  z-index: 10;
}

.page_detail {
  position: relative;
  min-height: 100vh;
}