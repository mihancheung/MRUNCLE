@import '/tpls/loading/loading.wxss';

.replies {
  position: relative;
  overflow: hidden;
}

.replies_item_movable_area {
  position: relative;
  width: auto;
  height: auto;
}

.replies_item_movable_area:nth-last-child(1) .replies_item:after {
  background: none;
}

.replies_item_movable_view {
  position: relative;
  z-index: 2;
  display: flex;
  height: auto;
  width: calc(100% + 150rpx);
  background: #ffffff;
}

.replies_delete {
  flex: 1;
  width: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-weight: bold;
  background: #fe3723;
}

.replies_item {
  position: relative;
  box-sizing: border-box;
  width: calc(100% - 150rpx);
  padding: 40rpx 150rpx 40rpx 150rpx;
}

.replies_item:after {
  content: '';
  position: absolute;
  left: 40rpx;
  bottom: 0;
  right: 0;
  height: 0.5px;
  background: #e5e5e5;
}

.replies_item_avata {
  position: absolute;
  left: 40rpx;
  top: 40rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, .1);
}

.replies_item_comment {
  position: absolute;
  right: 40rpx;
  top: 40rpx;
  width: 4em;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  font-size: 24rpx;
  color: #666666;
  word-wrap: break-word;
  word-break: break-all;
}

.replies_item_main {
  font-size: 28rpx;
  color: #232323;
}

.replies_item_title {
  font-size: 24rpx;
  color: #666666;
}

.replies_item_replier {
  font-weight: bold;
  margin-right: 10rpx;
  overflow: hidden;
  vertical-align: top;
  color: #232323;
}

.replies_item_post_title {
  display: inline;
  color: #666666;
}

.replies_item_post_title view {
  display: inline;
  color: #2e89b3;
}

.replies_item_cnt {
  margin: 16rpx 0;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.replies_item_cnt_replyto {
  display: inline;
}

.replies_item_cnt_replyto_name {
  color: #2e89b3;
  margin: 0 0 0 10rpx;
}

.replies_item_cnt_text {
  display: inline;
}

.replies_item_qoute {
  position: relative;
  padding-left: 16rpx;
  margin-bottom: 16rpx;
  color: #999999;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.replies_item_qoute:before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: #e7e7e7;
  overflow: hidden;
}

.replies_item_date {
  color: #999999;
  font-size: 24rpx;
}

.page_user_empty {
  min-height: calc(100vh - 592rpx);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.page_user_empty_icon {
  height: 104rpx;
}

.page_user_empty_txt {
  margin: 40rpx 0 0;
  color: #999999;
}


.replies .tpl_loading {
  position: static;
  height: 250rpx;
  padding-bottom: 0;
}