page {
  box-sizing: border-box;
  background: #ffffff;
  padding-bottom: calc(104rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(104rpx + env(safe-area-inset-bottom));
}

page:after {
  content: '';
  position: fixed;
  left: 0;
  top: 0;
  height: 1rpx;
  width: 100vw;
  border-top: 0.5px solid #e4e4e4;
  overflow: hidden;
  z-index: 10;
}

.page_comment {
  font-size: 28rpx;
  color: #232323;
}

.page_comment_post {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 104rpx;
  display: flex;
  align-items: center;
  background: #ffffff;
  border-top: 0.5px solid #e4e4e4;
  padding-bottom: calc(constant(safe-area-inset-bottom));
  padding-bottom: calc(env(safe-area-inset-bottom));
}

.page_comment_post_txt {
  flex: 1;
  display: flex;
  align-items: center;
  height: 72rpx;
  margin: 0 20rpx;
  padding: 0 30rpx;
  background: #f4f4f4;
  border-radius: 36rpx;
  color: #c3c3c3;
  font-size: 24rpx;
  z-index: 10;
}

.page_comment_item {
  position: relative;
  padding: 40rpx 28rpx 40rpx 116rpx;
}

.page_comment_item:nth-last-child(1) {
  border-bottom: none;
}

.page_comment_delete {
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1;
  height: 36rpx;
  width: 36rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.page_comment_delete_icon {
  height: 30rpx;
}

.page_comment_avata {
  position: absolute;
  left: 28rpx;
  top: 40rpx;
  width: 60rpx;
  height: 60rpx;
  background: #fbfaf4;
}

.page_comment_avata image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.page_comment_main {
  position: relative;
}

.page_comment_info {
  position: relative;
}

.page_comment_nickname {
  display: block;
  line-height: 1.3;
}

.page_comment_date {
  display: block;
  color: #999999;
  font-size: 24rpx;
}

.page_comment_cnt {
  display: block;
  padding: 10rpx 0 0;
  font-size: 32rpx;
  line-height: 1.8;
  color: #666666;
  word-wrap: break-word;
  word-break: break-all;
}

.page_comment_replies {
  margin: 20rpx 0 10rpx;
  padding: 30rpx 20rpx;
  background: #f4f4f4;
  border-radius: 10rpx;
}

.page_comment_replies_item {
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
}

.page_comment_replies_item:nth-child(1) {
  margin-top: 0;
}

.page_comment_replies_item text:nth-child(1) {
  color: #2e89b3;
}

.page_comment_replies_total {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #2e89b3;
}

.page_comment_replies_total:after {
  content: '';
  display: block;
  width: 10rpx;
  height: 10rpx;
  margin: 0 0 0 10rpx;
  transform: rotate(-45deg);
  border-right: 0.5px solid #2e89b3;
  border-bottom: 0.5px solid #2e89b3;
}

.page_comment .tpl_loading {
  position: static;
  height: 230rpx;
}