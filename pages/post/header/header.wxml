<template name="hd">
  <view class="grid_0 post_hd">
    <view class="post_hd_main">
      <view class="post_info">
        <text class="post_title">{{title}}</text>
        <view class="post_tags">
          <text class="post_tags_item" wx:for="{{tags}}" wx:key="*this">#{{item}}</text>
        </view>
      </view>

      <view class="post_hd_user">
        <image class="post_hd_user_avata"
          src="{{avata}}"
        />
        <text class="post_hd_user_desc post_hd_user_author">æ–‡ / {{author}}</text>
        <text class="post_hd_user_desc post_hd_user_date">{{date}}</text>
      </view>
    </view>
    <view class="post_mask">
      <image
        src="{{poster}}"
        mode="aspectFill"
      />
    </view>
  </view>
</template>
